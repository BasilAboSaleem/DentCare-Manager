<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs') %>
  <body>
    <div class="container-scroller">
      <%- include('../../partials/navbar.ejs') %>
      <div class="container-fluid page-body-wrapper">
        <%- include('../../partials/sidebar.ejs') %>

        <div class="main-panel">
          <div class="content-wrapper">
            <h3>Edit Treatment</h3>

            <div class="card">
              <div class="card-body">

                <form action="/treatments/<%= treatment._id %>/edit?_method=PUT" method="POST">
                  <div class="form-group">
                    <label for="name">Treatment Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= treatment.name %>" required>
                  </div>

                  <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" step="0.01" class="form-control" id="price" name="price" value="<%= treatment.price %>" required>
                  </div>

                  <div class="form-group">
                    <label for="description">Description (optional)</label>
                    <textarea class="form-control" id="description" name="description" rows="3"><%= treatment.description %></textarea>
                  </div>

                  <button type="submit" class="btn btn-primary">Update Treatment</button>
                  <a href="/treatments" class="btn btn-light">Cancel</a>
                </form>

              </div>
            </div>
          </div>

          <%- include('../../partials/footer.ejs') %>
        </div>
      </div>
    </div>

    <%- include('../../partials/scripts.ejs') %>
  </body>
</html>
