<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs') %>
  <body>
    <div class="container-scroller">
      <%- include('../../partials/navbar.ejs') %>
      <div class="container-fluid page-body-wrapper">
        <%- include('../../partials/sidebar.ejs') %>

        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-10 mx-auto">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Start Visit for <%= patient.name %></h4>
                    <p class="card-description">Fill the visit details below</p>

                    <form action="/visits/start/<%= appointment._id %>" method="POST">
                      <div class="form-group">
                        <label>Diagnosis <span class="text-danger">*</span></label>
                        <textarea name="diagnosis" class="form-control" rows="3" required></textarea>
                      </div>

                      <div class="form-group">
                        <label>Treatment Plan</label>
                        <textarea name="treatment" class="form-control" rows="2"></textarea>
                      </div>

                      <div class="form-group">
                        <label>Treatments Used</label>
                        <select name="treatments" class="form-control" multiple>
                          <% allTreatments.forEach(t => { %>
                            <option value="<%= t._id %>"><%= t.name %> - <%= t.price %></option>
                          <% }) %>
                        </select>
                        <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple.</small>
                      </div>

                      <div class="form-group">
                        <label>X-Ray Image</label>
                        <input type="file" name="xrayImage" class="form-control">
                      </div>

                      <div class="form-group">
                        <label>Extra Fees</label>
                        <input type="number" name="extraFees" class="form-control" value="0" min="0" step="0.5">
                      </div>

                      <div class="form-group">
                        <label>Reason for Extra Fees</label>
                        <input type="text" name="additionalFeeReason" class="form-control" placeholder="e.g., Urgent medication">
                      </div>

                      <div class="form-group">
                        <label>Discount</label>
                        <input type="number" name="discount" class="form-control" value="0" min="0" step="0.5">
                      </div>

                      <div class="form-group">
                        <label>Notes</label>
                        <textarea name="notes" class="form-control" rows="3"></textarea>
                      </div>

                      <button type="submit" class="btn btn-primary">Complete Visit</button>
                      <a href="/appointments" class="btn btn-light">Cancel</a>
                    </form>
                    
                  </div>
                </div>
              </div>
            </div>
          </div>

          <%- include('../../partials/footer.ejs') %>
        </div>
      </div>
    </div>
    <%- include('../../partials/scripts.ejs') %>
  </body>
</html>
