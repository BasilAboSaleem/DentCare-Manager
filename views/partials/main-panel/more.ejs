<div class="row">
  <div class="col-sm-12">
    <div class="row">
      <!-- 1 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Total Patients</p>
        <h3 class="rate-percentage"><%= stats.totalPatients %></h3>
      </div>

      <!-- 2 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Total Appointments</p>
        <h3 class="rate-percentage"><%= stats.totalAppointments %></h3>
      </div>

      <!-- 3 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Today's Appointments</p>
        <h3 class="rate-percentage"><%= stats.todayAppointments %></h3>
      </div>

      <!-- 4 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Emergency Cases</p>
        <h3 class="rate-percentage text-danger"><%= stats.emergencyCases %></h3>
      </div>

      <!-- 5 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Completed Visits</p>
        <h3 class="rate-percentage"><%= stats.completedVisits %></h3>
      </div>

      <!-- 6 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">New Patients</p>
        <h3 class="rate-percentage"><%= stats.newPatientsCount %></h3>
        <p class="text-success d-flex align-items-center"><i class="mdi mdi-arrow-up-bold"></i><span class="ml-1">Last 7 days</span></p>
      </div>

      <!-- 7 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Today's Visits</p>
        <h3 class="rate-percentage"><%= stats.todayVisits %></h3>
      </div>

      <!-- 8 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Today's Payments</p>
        <h3 class="rate-percentage text-success">₪<%= stats.todayPayments.toFixed(2) %></h3>
      </div>

      <!-- 9 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Today's Debts</p>
        <h3 class="rate-percentage text-warning">₪<%= stats.todayDebts.toFixed(2) %></h3>
      </div>

      <!-- 10 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Total Payments</p>
        <h3 class="rate-percentage text-success">₪<%= stats.totalPayments.toFixed(2) %></h3>
      </div>

      <!-- 11 -->
      <div class="col-md-3 mb-4">
        <p class="statistics-title">Total Debts</p>
        <h3 class="rate-percentage text-danger">₪<%= stats.totalDebts.toFixed(2) %></h3>
      </div>
    </div>
  </div>
</div>
